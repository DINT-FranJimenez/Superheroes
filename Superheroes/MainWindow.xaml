<Window x:Class="Superheroes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Superheroes"
        mc:Ignorable="d"
        Title="Superheroes" Height="450" Width="800">
    <Window.Resources>
        
    </Window.Resources>
    <Grid x:Name="xGridCambia">
        <Label Content="{Binding Superheroe.Nombre}" />
        <Image Source="{Binding Superheroe.Imagen}" />
        <Image x:Name="xGrupoPertenece" Tag="{Binding Superheroe.heroe}"/>
    </Grid>
</Window>
